<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="O igraÄu"
                android:textColor="#11af4a"
                android:textSize="22dp"
                android:textStyle="bold|italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Pobjede i porazi"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="3">

                <TextView
                    android:id="@+id/playerInfoWinsField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#cfc2c2"/>

                <ProgressBar
                    android:id="@+id/playerInfoProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:progress="75"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:scaleY="10"
                    android:progressTint="#0b9b0b"/>

                <TextView
                    android:id="@+id/playerInfoLossesField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#cfc2c2"/>

            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Ime i prezime"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/playerInfoFullNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Dob"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/playerInfoAgeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="E-mail adresa"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/playerInfoEmailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Opis"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/playerInfoDescriptionField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>