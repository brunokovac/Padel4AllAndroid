<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Lokacija"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/lookingGameLocationField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Datum i vrijeme početka"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/lookingGameStartField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Trajanje"
                android:textColor="#11af4a"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/lookingGameDurationField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edittext"
                android:textSize="18dp"
                android:textColor="#cfc2c2"
                android:textAlignment="center"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <Button
                android:id="@+id/lookingGameChatButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Razgovor"
                android:textColor="#ece7e7"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="14dp"
                android:background="@drawable/login_button"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:padding="5dp">

                <GridLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#076b13"
                    android:rowCount="7"
                    android:columnCount="3">

                    <LinearLayout
                        android:id="@+id/lookingGamePlayer1Layout"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/player_icon"/>

                        <TextView
                            android:id="@+id/lookingGamePlayer1InfoField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_gravity="fill"/>

                    <TextView
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_height="5dp"
                        android:layout_gravity="fill"
                        android:background="#ffffff"/>
                    <TextView
                        android:layout_height="5dp"
                        android:layout_gravity="fill"
                        android:background="#ffffff"/>
                    <TextView
                        android:layout_height="5dp"
                        android:layout_gravity="fill"
                        android:background="#ffffff"/>

                    <TextView
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_width="5dp"
                        android:background="#ffffff"
                        android:layout_gravity="fill"/>

                    <LinearLayout
                        android:id="@+id/lookingGamePlayer2Layout"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/player_icon"/>

                        <TextView
                            android:id="@+id/lookingGamePlayer2InfoField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="B.K."/>

                    </LinearLayout>

                    <TextView
                        android:layout_height="10dp"
                        android:layout_gravity="fill"
                        android:background="#111111"/>
                    <TextView
                        android:layout_height="10dp"
                        android:layout_gravity="fill"
                        android:background="#111111"/>
                    <TextView
                        android:layout_height="10dp"
                        android:layout_gravity="fill"
                        android:background="#111111"/>

                    <LinearLayout
                        android:id="@+id/lookingGamePlayer3Layout"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/player_icon"/>

                        <TextView
                            android:id="@+id/lookingGamePlayer3InfoField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="B.K."/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="5dp"
                        android:background="#ffffff"
                        android:layout_gravity="fill"/>

                    <TextView
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_height="5dp"
                        android:layout_gravity="fill"
                        android:background="#ffffff"/>
                    <TextView
                        android:layout_height="5dp"
                        android:layout_gravity="fill"
                        android:background="#ffffff"/>
                    <TextView
                        android:layout_height="5dp"
                        android:layout_gravity="fill"
                        android:background="#ffffff"/>

                    <TextView
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:layout_gravity="fill"/>

                    <LinearLayout
                        android:id="@+id/lookingGamePlayer4Layout"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/player_icon"/>

                        <TextView
                            android:id="@+id/lookingGamePlayer4InfoField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="B.K."/>

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/lookingGameSendRequestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pošalji zahtjev"
                android:textColor="#ece7e7"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="14dp"
                android:background="@drawable/requests_button"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>